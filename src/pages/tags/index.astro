---
import BaseLayout from "../../layouts/BaseLayout.astro";
const titulo = 'Indice de etiquetas';


const allTags = await Astro.glob('../posts/*.md');
const tags = [...new Set(allTags.map((post) => post.frontmatter.tags).flat())];
---

<BaseLayout tituloPagina={titulo}>
    <div class="tags">
        {tags.map((tag) => (
            <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
        ))}
    </div>
</BaseLayout>

<style>
    a {
        color: #00539f;
        text-decoration: none;
    }

    a:hover{
        color: chocolate;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;
        background-color: #f8fcfd;
    }
</style>

